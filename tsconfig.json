{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "outDir": "./build",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "baseUrl": "./",
      "paths": {
        "~/*": ["src/*"]
      },
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
  